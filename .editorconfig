# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript/JSON
[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2
quote_type = single

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 100

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Java/Kotlin (Android)
[*.{java,kt}]
indent_style = space
indent_size = 4

# Swift (iOS)
[*.swift]
indent_style = space
indent_size = 4

# Gradle
[*.gradle]
indent_style = space
indent_size = 4

# XML (Android resources)
[*.xml]
indent_style = space
indent_size = 4
